<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_ml_3"
        android:layout_width="101dp"
        android:layout_height="198dp"
        app:srcCompat="@drawable/l4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/iv_ml_2"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"

 />

    <ImageView
        android:id="@+id/iv_ml_2"
        android:layout_width="101dp"
        android:layout_height="198dp"
        app:srcCompat="@drawable/l2"
        app:layout_constraintStart_toEndOf="@id/iv_ml_3"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="-75dp"
        />

    <ImageView
        android:id="@+id/iv_ml_1"
        android:layout_width="101dp"
        android:layout_height="198dp"
        app:srcCompat="@drawable/l9"
        app:layout_constraintStart_toEndOf="@id/iv_ml_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="280dp"
        />

    <TextView
        android:id="@+id/tv_galeria_titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_galeria_descripcion"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="65dp"
         />

    <TextView
        android:id="@+id/tv_galeria_descripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_galeria_titulo"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="83dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>